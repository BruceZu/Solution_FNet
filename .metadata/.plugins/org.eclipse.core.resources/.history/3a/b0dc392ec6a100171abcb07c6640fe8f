	public static void main(String[] args) {
		int[] dimensions = {2,2,2};
		MultiDimensionArray mArray = new MultiDimensionArray();
		int[][][] myArray = new int[2][3][4];
		for (int i = 0; i < myArray.length; i++) {
			for (int j = 0; j < myArray[i].length; j++) {
